<% layout("/layouts/boilerplate")%>
<div class="row mt-3">
    <div class="col-8 offset-3 ">
    <h3><%=listings.title %></h3>
   </div>
    <div class="card col-6 offset-3 show-card" >
        <img src="<%= listings.url %>" class="card-img-top show-img" alt="listing image">
        <div class="card-body">
          <p class="card-text">
            
            <%=listings.description %> <br>
            â‚¹<%=listings.price.toLocaleString("en-IN") %> <br>
            <%=listings.location %> <br>
            <%=listings.country %> <br>
            
        </p>
        </div>
      </div>
    
    <br>
    
    


<div class="btns mb-3">
    <a href="/listings/<%=listings._id%>/edit" class="btn btn-dark  offset-3 edit-btn">Edit </a>

<br> 

    <form method="POST" action="/listing/<%=listings._id%>?_method=DELETE">
        <button class="btn btn-dark offset-5">Delete</button>
    </form>
</div>

<div class="col-8 offset-3 mb-3">
    <hr>
    <h4>Leave a review</h4>
    <form action="" >
        <div class="mb-3 mt-3">
            <label for="rating" class="form-label">Rating</label>
            <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" >
        </div>
        <div class="mb-3 mt-3">
            <label for="comment" class="form-label">Comments</label>
            <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"></textarea>
            <br>
            <button class="btn btn-outline-dark">submit</button>

        </div>
    </form>
</div>
</div>